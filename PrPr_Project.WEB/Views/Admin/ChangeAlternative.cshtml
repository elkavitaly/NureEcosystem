<div class="container modal-body">
      <form action="#" method="post">
        <div class="form-row">
          <div class="form-group col-md-12">
            <input type="hidden" name="Id" value="@Model.Id" />
            <label for="inputAddress">Название</label>
            <input
              type="text"
              class="form-control"
              id="inputAddress"
              placeholder="Название" 
              name="Name" 
              value="@Model.Name"/>
          </div>
          <div class="form-group col-md-6">
            <label for="inputEmail4">Факультет</label>
            <input
              type="text"
              class="form-control"
              id="inputEmail4"
              placeholder="Факультет"
              name="Faculty" 
              value="@Model.Faculty"
            />
          </div>
          <div class="form-group col-md-6">
            <label for="inputPassword4">Специальность</label>
            <input
              type="text"
              class="form-control"
              id="inputPassword4"
              placeholder="Специальность"
              name="Speciality" 
              value="@Model.Speciality"
            />
          </div>

          <div class="form-group col-md-12">
            <label for="exampleFormControlTextarea3">Описание</label>
            <textarea
              class="form-control"
              style="resize: none;"
              id="exampleFormControlTextarea3"
              placeholder="Описание"
              rows="7"
              name="Description">@Model.Description
            </textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </form>
    </div>

