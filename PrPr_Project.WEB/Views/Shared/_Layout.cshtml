<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <div class="header_bg">
            <div class="container">
                <div class="row justify-content-between header_row">
                    <div class="col-lg-2 header_row__logo">LOGO</div>
                    <div class="col-lg-4">
                        <div class="row menu_items">

                            @{
                                if (User.Identity.IsAuthenticated)
                                {
                                    <div class="col-lg-4 header_row__cols">@Html.ActionLink("Новости", "Index", "Home")</div>
                                    <div class="col-lg-4 header_row__cols">@Html.ActionLink("Справочник", "Catalog", "Home")</div>
                                    <div class="col-lg-4 header_row__cols">
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
                                    }
                                        </div>
                                }
                                else
                                {
                                    <div class="col-lg-6 header_row__cols">@Html.ActionLink("Новости", "Index", "Home")</div>
                                    <div class="col-lg-6 header_row__cols">@Html.ActionLink("Справочник", "Catalog", "Home")</div>
                                }
                            }

                            @*@Html.Partial("_LoginPartial")*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
