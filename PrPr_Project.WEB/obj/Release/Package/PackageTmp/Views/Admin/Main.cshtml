<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <input
                id="admin_search_input"
                class="form-control form-control-lg alternative_search"
                type="text"
                placeholder="Начните вводить для поиска"/>
        </div>
    </div>

    <div class="admin_add">
        <a href="#" data-toggle="modal" data-target="#exampleModalCenter">
            <i class="pe-7s-plus"></i> Добавить
        </a
        >
    </div>

    <table id="admin_table" class="table table-hover">
        <thead>
        <tr>
            <th scope="col-8">Название</th>
            <th scope="col-2">
                <i class="pe-7s-tools"></i>
            </th>
            <th scope="col-2">
                <i class="pe-7s-close admin_delete"></i>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@Html.DisplayFor(x => item.Name)</td>
                <td>
                    <a id="@item.Id" class="change_alt" href="ChangeAlternative/@item.Id" data-target="#exampleModalCenter">
                        <i class="pe-7s-tools"></i>
                    </a>
                </td>
                <td>
                    <a href="DeleteAlt/@item.Id">
                        <i class="pe-7s-close admin_delete"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<!--    Modal Window-->

<!-- Modal -->
<div
    class="modal fade"
    id="exampleModalCenter"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">
                    Modal title
                </h5>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="#" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputAddress">Название</label>
                            <input
                                type="text"
                                class="form-control"
                                id="inputAddress"
                                placeholder="Название"
                                name="Name"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Факультет</label>
                            <input
                                type="text"
                                class="form-control"
                                id="inputEmail4"
                                placeholder="Факультет"
                                name="Faculty"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Специальность</label>
                            <input
                                type="text"
                                class="form-control"
                                id="inputPassword4"
                                placeholder="Специальность"
                                name="Speciality"/>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="exampleFormControlTextarea3">Описание</label>
                            <textarea
                    class="form-control"
                    style="resize: none;"
                    id="exampleFormControlTextarea3"
                    placeholder="Описание"
                    rows="7"
                    name="Description"
                  ></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button
                            type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal">
                            Close
                        </button>
                        <button type="submit" class="btn btn-primary" name="Send">Save changes</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>